@model List<Movie>

<h2>Joel's Movie Collection</h2>

@* Displays all movies in a sortable, readable table format *@
<table class="table table-striped table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Plex</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @* Loop through each movie and display its details *@
        @foreach (var m in Model)
        {
            <tr>
                @* Display category name with null safety check *@
                <td>@m.Category?.CategoryName</td>
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>
                @* Convert boolean values to user-friendly Yes/No *@
                <td>@(m.Edited ? "Yes" : "No")</td>
                <td>@(m.CopiedToPlex ? "Yes" : "No")</td>
                <td>@m.Notes</td>
                @* Action links for editing and deleting movies *@
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
