@model Movie

<h2>Edit Movie</h2>

@* Form for updating an existing movie's information *@
<form method="post">
    @* Hidden field to preserve the MovieId during submission *@
    <input type="hidden" asp-for="MovieId" />
    @* Display all validation errors at the top *@
    <div asp-validation-summary="All" class="text-danger"></div>

    @* Category selection - required field *@
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">-- Select a Category --</option>
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    @* Required movie information *@
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" />
    </div>

    @* Optional movie details *@
    <div class="form-group">
        <label asp-for="Director">Director</label>
        <input asp-for="Director" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    @* Movie metadata *@
    <div class="form-group">
        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited" class="form-control">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied to Plex?</label>
        <select asp-for="CopiedToPlex" class="form-control">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>

    @* Additional information *@
    <div class="form-group">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    @* Submit and cancel buttons *@
    <button type="submit" class="btn btn-success mt-3">Save Changes</button>
    <a href="/Home/MovieList" class="btn btn-secondary mt-3">Cancel</a>
</form>
